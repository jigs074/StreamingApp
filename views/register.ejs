<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xynq - Register</title>
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet"> -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(120deg, #0d0d0d, #1a1a1a);
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .main {
            width: 100%;
            max-width: 800px;
            background: #1c1c1c;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.7);
        }

        h1 {
            text-align: center;
            background: linear-gradient(90deg, #f3567d, #ff8c66);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2.5rem;
            margin-bottom: 30px;
        }

        .signup-form {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        .form-title {
            text-align: center;
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #00d1ff;
        }

        .form-radio {
            display: flex;
            justify-content: space-around;
            align-items: center;
            margin: 15px 0;
        }

        .form-radio input {
            display: none;
        }

        .form-radio label {
            padding: 12px 25px;
            border: 2px solid #007BFF;
            border-radius: 50px;
            background: #1c1c1c;
            color: #007BFF;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s ease;
        }

        .form-radio input:checked + label {
            background: linear-gradient(90deg, #007BFF, #00D1FF);
            color: #fff;
        }

        .form-textbox {
            display: flex;
            flex-direction: column;
        }

        .form-name-group {
            display: flex;
            gap: 20px;
        }

        .form-name-group .form-textbox {
            flex: 1;
        }

        .form-textbox input {
            padding: 10px;
            border: none;
            border-radius: 5px;
            background: #2c2c2c;
            color: #fff;
            font-size: 14px;
        }

        .form-textbox label {
            margin-bottom: 5px;
            font-size: 14px;
        }

        label {
            margin-bottom: 8px;
            font-size: 14px;
            color: #ccc;
        }

        input,
        select {
            padding: 12px;
            border: none;
            border-radius: 8px;
            background: #2c2c2c;
            color: #fff;
            font-size: 15px;
            transition: 0.3s;
        }

        input:focus,
        select:focus {
            outline: none;
            background: #3a3a3a;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.8);
        }

        .submit {
            background: linear-gradient(90deg, #007BFF, #00D1FF);
            color: #fff;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
        }

        .submit:hover {
            background: linear-gradient(90deg, #0056b3, #009fcf);
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 123, 255, 0.6);
        }

        .loginhere {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }

        .loginhere-link {
            color: #00D1FF;
            font-weight: 700;
            text-decoration: none;
            transition: color 0.3s;
        }

        .loginhere-link:hover {
            color: #007BFF;
        }

        .dynamic-fields {
            display: none;
        }

        .dynamic-fields.visible {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .term-service {
            color: #00D1FF;
            text-decoration: none;
            font-weight: 700;
            transition: color 0.3s;
        }

        .term-service:hover {
            color: #007BFF;
        }
    </style>
</head>
<body>
    <div class="main">
        <h1>Xynq - Sign up</h1>
        <form id="signup-form" class="signup-form" action="/register/candidate" method="POST">
            <h2 class="form-title">What type of user are you?</h2>
            <div class="form-radio">
                <input type="radio" name="tag" value="candidate" id="candidate" checked>
                <label for="candidate">Candidate</label>

                <input type="radio" name="tag" value="interviewer" id="interviewer">
                <label for="interviewer">Interviewer</label>
            </div>

            <div class="form-name-group">
                <div class="form-textbox">
                    <label for="firstName">First Name</label>
                    <input type="text" id="first-name" name="firstName" placeholder="Enter your first name" required>
                </div>

                <div class="form-textbox">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" placeholder="Enter your last name" required>
                </div>
            </div>

            <div class="form-textbox">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
            </div>

            <div class="form-textbox">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
            </div>

            <div class="form-textbox">
                <label for="confirm-password">Confirm Password</label>
                <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm your password" required>
            </div>

            <div class="dynamic-fields" id="interviewer-fields">
                <div class="form-textbox">
                    <label for="company">Company</label>
                    <select id="company" name="company" style="color: black;">
                        <option value="" disabled selected>Select your company</option>
                    </select>
                </div>

                <div class="form-textbox">
                    <a href="/register-company" class="term-service">Register your company if not registered</a>
                </div>
            </div>

            <div class="form-textbox">
                <input type="submit" class="submit" value="Create account">
            </div>
        </form>

        <p class="loginhere">
            Already have an account? <a href="/login" class="loginhere-link">Log in</a>
        </p>
    </div>
  <script>
    const userTypeRadios = document.querySelectorAll('input[name="tag"]');
const interviewerFields = document.getElementById('interviewer-fields');
const companyField = document.getElementById('company');
const signupForm = document.getElementById('signup-form');

userTypeRadios.forEach((radio) => {
    radio.addEventListener('change', () => {
        if (radio.value === 'interviewer') {
            interviewerFields.classList.add('visible');
            signupForm.action = '/register/interviewer';
            companyField.setAttribute('required', 'true');
        } else {
            interviewerFields.classList.remove('visible');
            signupForm.action = '/register/candidate';
            companyField.removeAttribute('required'); // Remove required for candidate
        }
    });
});

const populateCompaniesDropdown = async () => {
        try {
            const response = await fetch('/companies'); // Call the API to fetch companies
            if (!response.ok) {
                throw new Error('Failed to fetch companies');
            }
            const data = await response.json();
            const companiesDropdown = document.getElementById('company');

            // Populate the dropdown with company names
            data.companies.forEach((company) => {
                const option = document.createElement('option');
                option.value = company.name; // Set the value to the company name
                option.textContent = company.name; // Display the company name
                companiesDropdown.appendChild(option);
            });
            $('#company').select2({
    placeholder: 'Select your company',
    allowClear: true
});

        } catch (error) {
            console.error('Error:', error);
        }
    };

    // Call the function on page load
    document.addEventListener('DOMContentLoaded', populateCompaniesDropdown);
</script>
</body>
</html>
